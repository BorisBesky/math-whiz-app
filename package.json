{
  "name": "math-whiz-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "busboy": "^1.6.0",
    "firebase": "^11.10.0",
    "firebase-admin": "^12.7.0",
    "katex": "^0.16.22",
    "lucide-react": "^0.525.0",
    "rc-progress": "^4.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.9.4",
    "react-scripts": "5.0.1",
    "sharp": "^0.33.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "react-scripts test --coverage --watchAll=false --ci",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:report": "npx playwright show-report",
    "test:lighthouse": "lhci autorun",
    "test:lighthouse:collect": "lhci collect",
    "eject": "react-scripts eject",
    "dev": "netlify dev",
    "lint": "eslint src",
    "validate:preview": "node scripts/validate-user-profiles.js --dry-run",
    "validate:execute": "node scripts/validate-user-profiles.js --execute",
    "delete:preview": "node scripts/delete-users-without-math-whiz-data.js --dry-run",
    "delete:execute": "node scripts/delete-users-without-math-whiz-data.js --execute"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 20,
        "lines": 20,
        "statements": 20
      }
    },
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.56.1",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.2.2",
    "eslint": "^8.57.1",
    "node-fetch": "^2.7.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
