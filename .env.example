# =============================================================================
# Math Whiz App - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# Firebase Configuration (Client-side - Safe to expose)
# =============================================================================
# These are used in the React app and are safe to expose in the client bundle.
# Get these values from Firebase Console > Project Settings > Your apps > Web app

# Firebase API Key
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key

# Firebase Auth Domain (e.g., your-project.firebaseapp.com)
REACT_APP_FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain

# Firebase Project ID
REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase Storage Bucket (e.g., your-project.appspot.com)
REACT_APP_FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket

# Firebase Messaging Sender ID
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id

# Firebase App ID
REACT_APP_FIREBASE_APP_ID=your-firebase-app-id

# Application ID (used for multi-tenant support, defaults to 'math-whiz-app')
REACT_APP_ID=math-whiz-app

# =============================================================================
# Firebase Admin SDK (Server-side only - NEVER expose to client)
# =============================================================================
# These are used by Netlify functions and scripts for server-side operations.
# Get these from Firebase Console > Project Settings > Service Accounts > Generate New Private Key

# Option 1: Use individual fields (recommended)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
# For FIREBASE_PRIVATE_KEY, you can use either:
# 1. The full private key with \n characters (they will be converted to newlines)
# 2. A base64 encoded version of the private key
# Example of option 1 (with quotes and \n):
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----\n"

# Option 2: Use service account JSON (alternative to individual fields above)
# If using this, you can omit FIREBASE_PROJECT_ID, FIREBASE_CLIENT_EMAIL, and FIREBASE_PRIVATE_KEY
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# =============================================================================
# Gemini API Configuration (Server-side only - NEVER expose to client)
# =============================================================================
# Used by Netlify functions for AI-powered question generation

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini Model Name (optional, defaults to "gemini-2.0-flash-exp")
GEMINI_MODEL_NAME=gemini-2.5-flash

# Gemini Model name for image generation
GEMINI_MODEL_NAME_IMAGES=gemini-2.5-flash-image

# =============================================================================
# Application Configuration
# =============================================================================
# Server-side application ID (used by Netlify functions, defaults to 'default-app-id')
APP_ID=default-app-id

# Public base URL for the application (used for generating join links)
# Leave empty for relative URLs, or set to full URL like https://your-app.netlify.app
PUBLIC_APP_BASE_URL=

# Join class code timeout in minutes (default: 1440 = 24 hours)
JOIN_CODE_TTL_MINUTES=1440

# =============================================================================
# PDF Upload Processing Configuration (Optional)
# =============================================================================
# These control batch processing behavior for PDF question uploads

# Number of questions to process concurrently per batch (default: 5)
PDF_OPTIONS_BATCH_SIZE=5

# Delay in milliseconds between batches (default: 2000 = 2 seconds)
PDF_OPTIONS_BATCH_DELAY=2000

# =============================================================================
# Node Environment
# =============================================================================
# Standard Node.js environment variable (development, production, test)
# Usually set automatically by build tools, but can be set manually
NODE_ENV=development

# =============================================================================
# CI/CD Configuration (Optional)
# =============================================================================
# Used by Playwright tests to determine if running in CI environment
# CI=true
